dir('<%= package_dir %>') {
    <% raise "SVN credentials are not supported at the moment" if credentials %>
    <% if patch %>
    if (fileExists('.svn')) {
        sh "${autoproj} unpatch ."
    }
    <% end %>
    svn url: '<%= vcs.url %>', poll: <%= poll %>
    <% if patch %>
    sh "${autoproj} patch ."
    <% end %>
}

